---
base: http://baldowl.github.com
id_base: tag:baldowl.github.com,2005
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-US">
  <id>{{ page.id_base }}:atom</id>
  <link rel="alternate" href="{{ page.base }}" type="text/html" />
  <link rel="self" href="{{ page.base }}/atom.xml" type="application/atom+xml" />
  <title>Baldowl</title>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>Emanuele Vicentini</name>
  </author>
  {% for post in site.posts limit: 10 %}
  <entry>
    <id>{{ page.id_base }}:{{ post.id }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <link rel="alternate" href="{{ page.base }}{{ post.url }}" type="text/html" />
    <title>{{ post.title }}</title>
    <content type="html">
      &lt;p&gt;{{ post.content | strip_html | truncatewords: 50 | xml_escape }}&lt;/p&gt;
      &lt;p&gt;&lt;a href=&quot;{{ page.base }}{{ post.url }}&quot;&gt;More...&lt;/a&gt;&lt;/p&gt;
    </content>
  </entry>
  {% endfor %}
</feed>
